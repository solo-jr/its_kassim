<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- wizard view -->
  <record id="update_quantity_wizard_view" model="ir.ui.view">
    <field name="name">Update Quantity</field>
    <field name="model">update.quantity.wizard</field>
    <field name="arch" type="xml">
      <form string="Commission Invoicing">
        <div class="alert alert-warning" role="alert">
          <i class="fa fa-exclamation-circle"></i>
          Updating quantity on hand for the following product.
        </div>
        <sheet>
          <group>
            <group>
              <field name="product_id" readonly="1"/>
            </group>
            <group>
            </group>
          </group>
          <field name="line_ids">
            <tree string="Lines" create="0" delete="0" readonly="1" widget="one2many_list" editable="bottom">
              <field name="bag_capacity_id" readonly="1" force_save="1"/>
              <field name="quantity"/>
            </tree>
          </field>
        </sheet>
        <footer>
          <button string="Update" name="action_update" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
