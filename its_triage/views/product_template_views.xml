<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="its_product_template_form_views" model="ir.ui.view">
            <field name="name">its.product.template.form.views</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="id" invisible="1"/>
                <xpath expr="//notebook" position="before">
                    <hr/>
                    <group>
                        <field name="is_an_all_round_bag"/>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Default Values">
                        <group>
                            <group colspan="4" col="4">
                                <field name="is_dv_automatic_sorting"/>
                            </group>
                            <group attrs="{'invisible': [('is_dv_automatic_sorting', '!=', True)]}" colspan="4" col="4" >
                                <field name="as_product_input_ids" widget="many2many_tags"/>
                                <field name="as_product_output_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <hr/>
                        <group>
                            <group colspan="4" col="4">
                                <field name="is_dv_manual_sorting"/>
                            </group>
                            <group attrs="{'invisible': [('is_dv_manual_sorting', '!=', True)]}" colspan="4" col="4" >
                                <field name="ms_product_input_id"/>
                                <field name="ms_product_output_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <hr/>
                        <group>
                            <group colspan="4" col="4">
                                <field name="is_dv_smalls_sorting"/>
                            </group>
                            <group attrs="{'invisible': [('is_dv_smalls_sorting', '!=', True)]}"  colspan="4" col="4" >
                                <field name="ss_product_input_ids" widget="many2many_tags"/>
                                <field name="ss_product_output_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
