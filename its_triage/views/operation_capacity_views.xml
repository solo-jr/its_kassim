<?xml version="1.0" encoding="UTF-8"?>
<odoo>


  <!-- Operation Capacity tree -->
  <record id="operation_capacity_tree" model="ir.ui.view">
    <field name="name">operation.capacity.tree</field>
    <field name="model">operation.capacity</field>
    <field name="arch" type="xml">
      <tree string="Operation Capacity" editable="bottom">
        <field name="name"/>
        <field name="capacity"/>
        <field name="active" widget="boolean_toggle"/>
      </tree>
    </field>
  </record>

  <!-- Operation Capacity form -->
  <record id="operation_capacity_form" model="ir.ui.view">
    <field name="name">operation.capacity.form</field>
    <field name="model">operation.capacity</field>
    <field name="arch" type="xml">
      <form string="Operation Capacity">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="capacity"/>
            </group>
            <group>
              <field name="active" widget="boolean_toggle"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Operation Capacity action -->
  <record id="operation_capacity_action" model="ir.actions.act_window">
    <field name="name">Bag Capacities</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">operation.capacity</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a new bag capacity
      </p>
    </field>
  </record>

</odoo>
