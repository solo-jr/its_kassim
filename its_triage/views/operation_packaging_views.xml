<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Operation Packaging Tree view -->
  <record id="operation_packaging_tree" model="ir.ui.view">
    <field name="name">operation.packaging.tree</field>
    <field name="model">operation.packaging</field>
    <field name="arch" type="xml">
      <tree string="Packagings">
        <field name="name"/>
        <field name="product_id"/>
      </tree>
    </field>
  </record>

  <!-- Operation Packaging Form view -->
  <record id="operation_packaging_form" model="ir.ui.view">
    <field name="name">operation.packaging.form</field>
    <field name="model">operation.packaging</field>
    <field name="arch" type="xml">
      <form string="Packagings">
        <header>
          <button name="action_update_quantity_on_hand" string="Update Quantity" type="object"
                  class="oe_highlight" attrs="{'invisible': [('name', '=', '/')]}"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name" readonly="1" force_save="1"/>
            </h1>
          </div>
          <group>
            <group>
              <field name="product_id" domain="[('type', '=', 'product')]"/>
            </group>
            <group>
            </group>
          </group>
          <notebook>
            <page name="lines" string="Lines">
              <field name="line_ids" widget="one2many" context="{'show_attribute': False}" readonly="1">
                <tree string="Lines">
                  <field name="bag_capacity_id" readonly="1"/>
                  <field name="quantity"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="activity_ids" widget="mail_activity"/>
          <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
        </div>
      </form>
    </field>
  </record>

  <!-- Operation Packaging Action menu -->
  <record id="operation_packaging_menu_action" model="ir.actions.act_window">
    <field name="name">Packagings</field>
    <field name="res_model">operation.packaging</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create an new packaging
      </p>
    </field>
  </record>

</odoo>
